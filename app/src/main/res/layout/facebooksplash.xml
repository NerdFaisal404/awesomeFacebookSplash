<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/logoHeight"
        android:layout_height="@dimen/logoWidth"
        android:layout_above="@+id/valuebar"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginBottom="@dimen/value_between_bar_logo"
        android:id="@+id/logo"
        android:src="@mipmap/ic_launcher_round" />
    <com.ahmedshaban.awesomefacebooksplash.ValueBar
        android:layout_width="@dimen/value_bar_width"
        android:layout_height="wrap_content"
        android:id="@+id/valuebar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/value_between_bar_bottom"
        custom:barHeight="@dimen/value_bar_barHeight"
        custom:baseColor="@color/navy"
        custom:fillColor="@color/white"
        />


</RelativeLayout>